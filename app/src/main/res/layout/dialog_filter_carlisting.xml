<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_bg_dark"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvFilterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:alpha="0.3"
        app:layout_constraintTop_toBottomOf="@id/tvFilterTitle" />

    <!-- Brand Filter Section -->
    <TextView
        android:id="@+id/tvBrandLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brand"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider" />

    <HorizontalScrollView
        android:id="@+id/brandScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/tvBrandLabel">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipBrandAll"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:checkable="true"
                android:checked="true"
                android:textColor="@color/white" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipBrandToyota"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toyota"
                android:checkable="true"
                android:textColor="@color/white" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipBrandHonda"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Honda"
                android:checkable="true"
                android:textColor="@color/white" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipBrandMazda"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mazda"
                android:checkable="true"
                android:textColor="@color/white" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipBrandFord"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ford"
                android:checkable="true"
                android:textColor="@color/white" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipBrandLamborghini"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lamborghini"
                android:checkable="true"
                android:textColor="@color/white" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipBrandFerrari"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ferrari"
                android:checkable="true"
                android:textColor="@color/white" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipBrandBentley"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bentley"
                android:checkable="true"
                android:textColor="@color/white" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipBrandKia"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kia"
                android:checkable="true"
                android:textColor="@color/white" />

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <!-- Vehicle Type Filter -->
    <TextView
        android:id="@+id/tvVehicleTypeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vehicle Type"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/brandScrollView" />

    <HorizontalScrollView
        android:id="@+id/vehicleTypeScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/tvVehicleTypeLabel">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupVehicleType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTypeAll"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:checkable="true"
                android:checked="true"
                android:textColor="@color/white" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTypeSedan"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sedan"
                android:checkable="true"
                android:textColor="@color/white" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTypeSUV"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUV"
                android:checkable="true"
                android:textColor="@color/white" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTypePickup"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pickup"
                android:checkable="true"
                android:textColor="@color/white" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTypeSupercar"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supercar"
                android:checkable="true"
                android:textColor="@color/white" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTypeHatchback"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hatchback"
                android:checkable="true"
                android:textColor="@color/white" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTypeCrossover"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crossover"
                android:checkable="true"
                android:textColor="@color/white" />

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <!-- Fuel Type Filter -->
    <TextView
        android:id="@+id/tvFuelTypeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fuel Type"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vehicleTypeScrollView" />

    <HorizontalScrollView
        android:id="@+id/fuelTypeScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/tvFuelTypeLabel">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupFuelType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFuelAll"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:checkable="true"
                android:checked="true"
                android:textColor="@color/white" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFuelGasoline"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gasoline"
                android:checkable="true"
                android:textColor="@color/white" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFuelDiesel"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diesel"
                android:checkable="true"
                android:textColor="@color/white" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFuelElectric"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Electric"
                android:checkable="true"
                android:textColor="@color/white" />

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <!-- Seats Filter -->
    <TextView
        android:id="@+id/tvSeatsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seats"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fuelTypeScrollView" />

    <HorizontalScrollView
        android:id="@+id/seatsScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/tvSeatsLabel">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupSeats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSeatsAll"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:checkable="true"
                android:checked="true"
                android:textColor="@color/white" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSeats2"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Seats"
                android:checkable="true"
                android:textColor="@color/white" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSeats4"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 Seats"
                android:checkable="true"
                android:textColor="@color/white" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSeats5"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 Seats"
                android:checkable="true"
                android:textColor="@color/white" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSeats7"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7+ Seats"
                android:checkable="true"
                android:textColor="@color/white" />

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/seatsScrollView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btnReset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Reset"
            android:textColor="@color/white"
            android:backgroundTint="#3D3D3D" />

        <Button
            android:id="@+id/btnApply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Apply"
            android:backgroundTint="#0066CC" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
